{
  "name": "arepabuelas-backend",
  "version": "1.0.0",
  "description": "Backend API para Arepabuelas de la esquina - E-commerce seguro",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "reset-db": "node src/database/reset.js",
    "test": "newman run tests/postman_collection.json -e tests/postman_environment.json",
    "test:report": "newman run tests/postman_collection.json -e tests/postman_environment.json --reporters cli,htmlextra --reporter-htmlextra-export test-results/report.html"
  },
  "keywords": [
    "ecommerce",
    "api",
    "security"
  ],
  "author": "Antipinzas Group",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "newman": "^6.2.1",
    "newman-reporter-htmlextra": "^1.23.1",
    "nodemon": "^3.0.2"
  }
}
